{
  "name": "duet",
  "version": "0.1.0",
  "repository": "git@github.com:pnn/duet.git",
  "author": "penny <penny@penny.lgbt>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --env=development --progress",
    "test": "npm run lint && npm run jest:ci",
    "build": "webpack --env=production --progress",
    "lint": "standard | snazzy",
    "jest": "jest",
    "jest:ci": "jest --runInBand && codecov",
    "opencov": "opn coverage/index.html"
  },
  "babel": {
    "presets": [
      [
        "latest",
        {
          "es2015": {
            "modules": false
          }
        }
      ],
      "react",
      "stage-2"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html"
    ],
    "collectCoverage": true
  },
  "standard": {
    "globals": [
      "expect",
      "test",
      "describe"
    ]
  },
  "dependencies": {
    "github-api": "^3.0.0",
    "gx": "^1.0.0-rc3",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "3.0.0-beta2",
    "styled-components": "^1.4.3"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "codecov": "^1.0.1",
    "enzyme": "^2.7.1",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.0",
    "opn-cli": "^3.1.0",
    "react-addons-test-utils": "^15.4.2",
    "sinon": "^1.17.7",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0"
  }
}
